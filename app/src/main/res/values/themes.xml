<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramHesam" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/insta_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textAllCaps">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="text_in_layout_hint_Style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_in_layout_error_Style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
        <item name="boxBackgroundColor">#FAFAFA</item>
        <item name="android:textColorHint">@color/stroke_editText_normal</item>
        <item name="errorTextAppearance">@style/text_in_layout_error_Style</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintTextColor">@color/stroke_editText_normal</item>
        <item name="hintTextAppearance">@style/text_in_layout_hint_Style</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="TextInputLayoutStyle2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
        <item name="boxBackgroundColor">#FAFAFA</item>
        <item name="android:textColorHint">@color/stroke_editText_normal</item>
        <item name="errorTextAppearance">@style/text_in_layout_error_Style</item>
        <item name="hintTextColor">@color/stroke_editText_normal</item>
        <item name="hintTextAppearance">@style/text_in_layout_hint_Style</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextInputLayoutStyleEdit"  >
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/stroke_editText_normal</item>
        <item name="errorTextAppearance">@style/text_in_layout_error_Style</item>
        <item name="hintTextColor">@color/stroke_editText_normal</item>
        <item name="hintTextAppearance">@style/text_in_layout_hint_Style</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTextInputEditTextEditprofile" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">30dp</item>
    </style>

    <style name="button_next">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
    </style>


    <style name="view">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F4F4F4</item>
    </style>

    <style name="viewEditProfile">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E6E6E6</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>

    </style>

    <style name="view2">
        <item name="android:layout_height">0.57dp</item>
        <item name="android:background">#CDCDCD</item>
    </style>
    <style name="viewCreate">
        <item name="android:layout_height">0.57dp</item>
        <item name="android:background">#CDCDCD</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">53dp</item>


    </style>



    <style name="textProfile">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textProfileNumber">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBottomSheetMore">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="textBottomSheetCreate">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="textNewPost">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>


    </style>


    <style name="view_separator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginRight">180dp</item>
        <item name="android:layout_marginLeft">180dp</item>
    </style>

    <style name="imageexplor">
        <item name="android:layout_height">140dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="newpostbirder">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>



</resources>