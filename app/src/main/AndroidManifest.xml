<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alroid.instagramhesam">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:icon="@drawable/logoinsta"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoinsta"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/Theme.InstagramHesam"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme">

        <activity
            android:name=".View.Activity.CallActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Activity.DirectActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".View.Activity.DetailsVideoActivity" />
        <activity
            android:name=".View.Activity.EditPostActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Activity.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Activity.SendNewPostActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Activity.StoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Activity.CreateAccountActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>